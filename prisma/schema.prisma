// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Better Auth Models
model User {
  id            String  @id @default(uuid())
  name          String?
  email         String  @unique
  emailVerified Boolean @default(false)
  image         String?
  role          String  @default("member") // admin, member

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  profile         UserProfile?
  sessions        Session[]
  accounts        Account[]
  projectMembers  ProjectMember[]
  invoices        UserInvoice[]
}

model UserProfile {
  id        String    @id @default(uuid())
  userId    String    @unique
  phone     String?
  address   String?
  birthDate DateTime?

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Account {
  id           String    @id @default(uuid())
  userId       String
  accountId    String
  providerId   String
  accessToken  String?
  refreshToken String?
  idToken      String?
  expiresAt    DateTime?
  password     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([providerId, accountId])
  @@index([userId])
}

model Verification {
  id         String   @id @default(uuid())
  identifier String
  value      String
  expiresAt  DateTime

  createdAt DateTime @default(now())

  @@unique([identifier, value])
}

// Time Tracking Models
model TimeEntry {
  id                String    @id @default(uuid())
  projectMemberId   String
  date              DateTime  @db.Date // The day this entry is for
  duration          Int       // Required: duration in minutes
  startTime         String?   // Optional: "09:00" format
  endTime           String?   // Optional: "17:30" format
  description       String
  billable    Boolean  @default(true)
  billed            Boolean   @default(false) // Has been included in an invoice

  // Relations
  projectMember     ProjectMember    @relation(fields: [projectMemberId], references: [id], onDelete: Cascade)

  // Audit fields
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectMemberId, date])

}

model Project {
  id           String   @id @default(uuid())
  name         String
  clientId     String
  description  String?
  budgetAmount Decimal? @db.Decimal(10, 2) // Optional budget amount (USD)
  status       String   @default("active") // active, archived, completed
  color        String   @default("#6366f1") // For UI display
  userId       String // Project owner

  // Relations
  client       Client    @relation(fields: [clientId], references: [id])
  members      ProjectMember[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clientId])
}

model ProjectMember {
  id         String  @id @default(uuid())
  projectId  String
  userId     String
  role       Role    @default(member)
  payoutRate Decimal @db.Decimal(10, 2) // Individual pay rate for this user on this project (USD/hr)
  chargeRate Decimal @db.Decimal(10, 2) // Rate charged to client for this user on this project (USD/hr)
  isActive   Boolean @default(true)


 
 // Relations  
  project      Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  timeEntries  TimeEntry[]


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([projectId, userId])
  @@index([userId, isActive])
  @@index([projectId, isActive])
}

// Enum for ProjectMember role
enum Role {
  owner
  manager
  member
}

model Client {
  id         String  @id @default(uuid())
  name       String
  email      String?
  company    String?
  isArchived Boolean @default(false)

  // Relations
  projects     Project[]
  invoices     ClientInvoice[]

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model ClientInvoice {
  id                String    @id @default(uuid())
  clientId          String
  invoiceTotal      Decimal   @db.Decimal(10, 2)

  // Relations
  lineItems         ClientLineItem[]
  client            Client  @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model ClientLineItem {
  id           String    @id @default(uuid())
  invoiceId    String
  name         String
  summary      String
  approved     Boolean   @default(false)
  amount       Decimal   @db.Decimal(10, 2)

  // Relations
  invoice      ClientInvoice   @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model UserInvoice {
  id           String    @id @default(uuid())
  userId       String


  // Relations
  lineItems    UserLineItem[]
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

}

model UserLineItem {
  id           String    @id @default(uuid())
  invoiceId    String
  name         String
  summary      String
  amount       Decimal   @db.Decimal(10, 2)


  // Relations
  invoice      UserInvoice    @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}
